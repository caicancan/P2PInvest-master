<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:atsgg="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_top"/>

    <com.atsgg.p2pinvest.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/vp_home"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <!--</android.support.v4.view.ViewPager>-->

                <!--<com.viewpagerindicator.CirclePageIndicator-->
                <!--android:id="@+id/cpi_home"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom|center_horizontal"-->
                <!--android:layout_marginBottom="5dp"/>-->

                <com.youth.banner.Banner
                    android:id="@+id/banner_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.youth.banner.Banner>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/recommend"
                android:drawableTint="#ff00"
                android:gravity="center_vertical"
                android:text="乐享活180天计划第一期"
                android:textColor="#262525"
                android:textSize="28sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_attribute_bg"
                    android:gravity="center"
                    android:text="本息保障"
                    android:textColor="#595959"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_attribute_bg"
                    android:gravity="center"
                    android:text="每日计息"
                    android:textColor="#595959"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_attribute_bg"
                    android:gravity="center"
                    android:text="高额收益"
                    android:textColor="#595959"
                    android:textSize="15sp"/>


            </LinearLayout>

            <com.atsgg.p2pinvest.ui.RoundProgress
                android:id="@+id/roundp_home"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                atsgg:max="100"
                atsgg:progress="60"
                atsgg:roundColor="@color/product_detail_common"
                atsgg:roundProgressColor="@color/round_red_common"
                atsgg:roundWidth="10dp"
                atsgg:textColor="@color/title_text"
                atsgg:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="预期年利率: "
                    android:textColor="#666464"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_home_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="10.0% + 2.0%"
                    android:textColor="#ff0000"
                    android:textSize="18sp"/>

            </LinearLayout>

            <Button
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/home"
                android:text="立即加入"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/guarantee_icon"
                android:text="风险保障金由硅谷银行监管"
                android:textColor="@android:color/black"/>
        </LinearLayout>


    </com.atsgg.p2pinvest.ui.MyScrollView>

</LinearLayout>